<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="br.com.digitalhouse.marmeladamovie.presenter.features.home.HomeFragment"
        android:label="Marmelada Movie"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/home_to_detail"
            app:destination="@id/detailFragment"
            app:popUpTo="@id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="br.com.digitalhouse.marmeladamovie.presenter.features.favorite.FavoriteFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_favorite">

        <action
            android:id="@+id/action_favorite_to_detail"
            app:destination="@id/detailFragment" />

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="br.com.digitalhouse.marmeladamovie.presenter.features.profile.ProfileFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/catalogFragment"
        android:name="br.com.digitalhouse.marmeladamovie.presenter.features.catalog.CatalogFragment"
        android:label="CatÃ¡logo"
        tools:layout="@layout/fragment_catalog">

        <action
            android:id="@+id/catalog_to_movies"
            app:destination="@id/moviesFragment" />

    </fragment>

    <fragment
        android:id="@+id/moviesFragment"
        android:name="br.com.digitalhouse.marmeladamovie.presenter.features.catalog.movies.MoviesFragment"
        android:label="Filmes"
        tools:layout="@layout/fragment_movies" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="br.com.digitalhouse.marmeladamovie.presenter.features.detail.MovieDetailFragment"
        android:label=""
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="movie"
            android:defaultValue="@null"
            app:argType="br.com.digitalhouse.marmeladamovie.data.remote.model.movie.Movie"
            app:nullable="true" />

        <argument
            android:name="favorite"
            android:defaultValue="@null"
            app:argType="br.com.digitalhouse.marmeladamovie.data.local.entity.MovieFavorite"
            app:nullable="true" />

    </fragment>

</navigation>